@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center header">
    <h1 class="display-4 fw-bold">Building Materiales SA. de CV.</h1>
    <img src="/Images/logo.jpg" alt="Logo" class="top-right-image">
</div>

<div class="carousel-container mt-5">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/mat.jpg" class="d-block w-100 carousel-image" alt="Imagen 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Materiales de Calidad</h5>
                    <p>Proveemos lo mejor para tus proyectos de construcción.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/tor.jpg" class="d-block w-100 carousel-image" alt="Imagen 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Equipos Profesionales</h5>
                    <p>Herramientas confiables para cualquier trabajo.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/tub.jpg" class="d-block w-100 carousel-image" alt="Imagen 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Variedad en Productos</h5>
                    <p>Encuentra todo lo que necesitas en un solo lugar.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Fondo general */
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Encabezado principal */
    .header {
        background-color: #343a40;
        color: #ffc107;
        padding: 20px 0;
        position: relative;
        border-bottom: 5px solid #ffc107;
    }

    /* Estilo para la imagen superior derecha */
    .top-right-image {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 120px;
        height: auto;
        border: 3px solid #ffc107;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Carrusel */
    .carousel-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .carousel-inner {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .carousel-image {
        height: 500px;
        object-fit: cover;
    }

    /* Texto del carrusel */
    .carousel-caption {
        background: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
        padding: 10px 20px;
        color: #ffc107;
    }

    /* Botones del carrusel */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(100%);
    }
</style>
