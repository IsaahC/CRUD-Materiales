@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sección de bienvenida -->
        <div class="col-md-8 welcome-container">
            <h1 class="display-4">Bienvenido a nuestra Tienda de Materiales de Construcción</h1>
            <p class="welcome-message">Encuentra todo lo que necesitas para tu próximo proyecto de construcción. ¡Materiales de alta calidad al mejor precio!</p>
        </div>

        <!-- Sección de inicio de sesión -->
        <div class="col-md-4 login-container">
            <h2 class="mb-3">Iniciar Sesión</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="nombreUsuario" name="NombreUsuario" value="@Model.NombreUsuario" />
                </div>
                <div class="mb-3">
                    <label for="contrasena" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contrasena" name="Contrasena" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
    </div>
</div>

<footer>
    <div class="logo-container">
        <img src="/Imagenes/logo.png">
    </div>
</footer>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* Agregar una imagen de fondo con opacidad */
    .container-fluid {
        flex: 1;
        padding: 2rem;
        position: relative;
        background: url('/Imagenes/fondo_construccion.jpg') no-repeat center center fixed;
        background-size: cover;
        background-attachment: fixed;
        filter: brightness(60%); /* Opacidad suave para la imagen */
    }

    .row {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .welcome-container {
        background-color: rgba(255, 255, 255, 0.8); /* Fondo blanco translúcido */
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .welcome-container h1 {
        color: #2c3e50;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .welcome-message {
        font-size: 1.25rem;
        color: #7f8c8d;
    }

    .btn {
        background-color: #3498db;
        color: #fff;
        border: none;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #2980b9;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco translúcido */
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .login-container h2 {
        color: #2c3e50;
        margin-bottom: 1.5rem;
    }

    footer {
        position: fixed;
        bottom: 0;
        right: 0;
        padding: 10px;
        background: none;
    }

    .logo-container img {
        max-height: 100px;
        max-width: 100px;
    }
</style>
