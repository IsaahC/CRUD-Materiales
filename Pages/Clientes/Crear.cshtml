@page
@model CRUD_Materiales.Pages.Clientes.Crear
@{
    ViewData["Title"] = "Crear";
}



<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Nuevo cliente</h2>
        
        @if(Model.ErrorMessage.Length > 0){
            <div class="alert alert-danger alert-dismissibe fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nombre</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Primernombre" />
                    <span asp-validation-for="Primernombre" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Apellido</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Apellidos" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Tel√©fono</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Direccion</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Direccion" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Notas</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Notas" />
                    <span asp-validation-for="Notas" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="=button btn-primary">Enviar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Clientes/Index" role="button">Cancelar</a>
                </div>
            </div>
        </form>

</div>
</div>